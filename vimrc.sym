" ! overrides if already exists. Helps prevent errors
func! Backspace()
if col('.') == 1
  if line('.')  != 1
    return  "\<ESC>kA\<Del>"
  else
    return ""
  endif
else
  return "\<Left>\<Del>"
endif
endfunc




